{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "downlevelIteration": true,
    "allowUmdGlobalAccess": true,
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@app/*": ["src/app/*"],
      "@lib-components/*": ["src/lib-components/*"],
      "@pl-core/*": ["src/pl-core/*"],
      "@toys/*": ["src/toys/*"],
      "@common/*": ["src/app/common/*"],
      "@modules/*": ["src/app/modules/*"],
      "@room/*": ["src/app/modules/room/*"],
      "@conference/*": ["src/app/modules/room/conference/*"]
    }
  }
}
